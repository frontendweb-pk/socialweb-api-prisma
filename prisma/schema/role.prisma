model Role {
    role_id     Int      @id @default(autoincrement())
    role_name   String   @unique @db.VarChar(100)
    permissions String[] @db.VarChar(100)
    active      Boolean  @default(true)
    created_at  DateTime @default(now())
    updated_at  DateTime @updatedAt

    // relation
    user User[]

    @@map("roles")
}

enum RoleEnum {
    USER
    ADMIN
    SUPERADMIN
    STAFF
    VENDOR
    AUDITOR
    MODERATOR
}
